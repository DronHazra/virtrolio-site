rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /messages/{message} {
      allow create, update: if request.resource.data.from == request.auth.uid;
      allow read, delete: if resource.data.to == request.auth.uid;
    }
    match /users/{user} {
      allow read, write: if request.auth != null;
    }
  }
}
